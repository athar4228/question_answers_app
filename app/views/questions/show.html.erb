<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-center">
    <h1 class="main-heading">Question</h1>
    <div>
      <label>Title</label>
      <p><%= @question.title %></p>
    </div>
    <div>
      <label>Body</label>
      <%= markdown(@question.body) %>
    </div>
  </div>
</div>

<% if @question.has_author?(current_user) %>
  <%= link_to 'Edit', edit_question_path(@question) %> |
<% end %>
<%= link_to 'Back', questions_path %>
