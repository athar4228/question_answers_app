<%= link_to 'Back', questions_path, class: 'pull-right' %>

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-center">
    <h2 class="main-heading">
      <%= @question.title %>
    </h2>

    <hr>

    <div class='markdown-container question-body'>
      <%= markdown(@question.body) %>
    </div>

    <small class='pull-right'><%= @question.author_first_name %></small>
    <div class="clearfix"></div>
    <small class='pull-right'><%= render_datetime(@question.created_at) %></small>
  </div>
</div>

<h2>Answers</h2>
<div class="question-answers">
  <%= render 'answers', answers: show_saved_answers(@answers) %>
</div>

<% if can_submit_answer?(@question) %>
  <div class='new-answer'>
    <%= render 'answers/new', question: @question, answer: @new_answer %>
  </div>
<% end %>
